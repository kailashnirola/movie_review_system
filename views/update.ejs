<%- include('partials/header.ejs') %>
<body style="background-color: #f8f9fa;">
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title mb-4" style="color: #343a40;">Update Review</h2>
                <form action="/update?id=<%= rev.id %>" method="post">
                    <div class="form-group">
                        <label for="name" style="color: #343a40;">Book Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= rev.name %>" required>
                    </div>
                    <div class="form-group">
                        <label for="isbn" style="color: #343a40;">ISBN</label>
                        <input type="text" class="form-control" id="isbn" name="isbn" value="<%= rev.isbn %>" required>
                    </div>
                    <div class="form-group">
                        <label for="review" style="color: #343a40;">Review</label>
                        <textarea class="form-control" id="review" name="review" rows="8" required><%= rev.review %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="stars" style="color: #343a40;">Rating</label>
                        <select class="form-control" id="stars" name="stars" required>
                            <% for (let i = 5; i >= 1; i--) { %>
                                <option value="<%= i %>" <%= i === rev.stars ? 'selected' : '' %>><%= i %></option>
                            <% } %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Review</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('partials/footer.ejs') %>
