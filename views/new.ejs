<%-include('partials/header.ejs') %>
<body style="background-color: #f8f9fa;">
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title mb-4" style="color: #343a40;">Add a New Review</h2>
                <form action="/new" method="post">
                    <div class="form-group">
                        <label for="name" style="color: #343a40;">Book Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter book name" required>
                    </div>
                    <div class="form-group">
                        <label for="isbn" style="color: #343a40;">ISBN</label>
                        <input type="text" class="form-control" id="isbn" name="isbn" placeholder="Enter book ISBN" required>
                    </div>
                    <div class="form-group">
                        <label for="review" style="color: #343a40;">Review</label>
                        <textarea class="form-control" id="review" name="review" rows="8" placeholder="Write your review here" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="stars" style="color: #343a40;">Rating</label>
                        <select class="form-control" id="stars" name="stars" required>
                            <option value="">Select rating</option>
                            <option value="1">★</option>
                            <option value="2">★★</option>
                            <option value="3">★★★</option>
                            <option value="4">★★★★</option>
                            <option value="5">★★★★★</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">Submit Review</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%-include('partials/footer.ejs') %>
